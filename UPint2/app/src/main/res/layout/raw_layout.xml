<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="2dp"
    >


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:id="@+id/classinfolayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >


            <TextView
                android:id="@+id/centercourse"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="185dp"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:layout_toLeftOf="@+id/centercourse"
                android:id="@+id/img"
                android:src="@drawable/com_facebook_button_icon_blue"
                />

            <ImageView
                android:id="@+id/moneyicon"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_money"
                android:layout_toLeftOf="@+id/price"
                android:layout_below="@id/bordertime2"
                android:layout_marginRight="3dp"
                android:layout_marginTop="5dp"
                />
            <Button
                android:id="@+id/buttontags1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/buttontags2"
                android:layout_marginTop="5dp"
                android:layout_marginRight="3dp"
                android:layout_below="@+id/moneyicon"
                android:text="#keyword"
                android:textSize="8dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:background="@drawable/tags_button"
                android:paddingRight="6dp"
                android:paddingLeft="6dp"
                android:paddingTop="1dp"
                android:paddingBottom="2dp"
                android:minHeight="0dp" android:minWidth="0dp"
                android:textAllCaps="false"
                />

            <Button
                android:id="@+id/buttontags2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/buttontags3"
                android:layout_marginTop="5dp"
                android:layout_marginRight="3dp"
                android:layout_below="@+id/moneyicon"
                android:text="#keyword"
                android:textSize="8dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:background="@drawable/tags_button"
                android:paddingRight="6dp"
                android:paddingLeft="6dp"
                android:paddingTop="1dp"
                android:paddingBottom="2dp"
                android:minHeight="0dp" android:minWidth="0dp"
                android:textAllCaps="false"
                />

            <Button
                android:id="@+id/buttontags3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/centercourse"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/moneyicon"
                android:text="#keyword"
                android:textSize="8dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:background="@drawable/tags_button"
                android:paddingRight="6dp"
                android:paddingLeft="6dp"
                android:paddingTop="1dp"
                android:paddingBottom="2dp"
                android:minHeight="0dp" android:minWidth="0dp"
                android:textAllCaps="false"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="9dp"
                android:id="@+id/price"
                android:text="price"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="9dp"
                android:layout_toLeftOf="@+id/peopleicon"
                android:layout_below="@id/bordertime2"
                android:layout_marginTop="5dp"

                />

            <ImageView
                android:id="@+id/peopleicon"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_people"
                android:layout_toLeftOf="@+id/numberofstudent"
                android:layout_below="@id/bordertime2"
                android:layout_marginRight="3dp"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bordertime2"
                android:layout_marginRight="30dp"
                android:layout_marginTop="6dp"
                android:id="@+id/numberofstudent"
                android:text="15"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="9dp"
                android:layout_toLeftOf="@+id/centercourse"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Test"
                android:layout_toLeftOf="@+id/centercourse"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:layout_marginLeft="10dp"
                android:id="@+id/name"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="D-1"
                android:layout_alignBaseline="@+id/dateimage"
                android:layout_toRightOf="@+id/dateimage"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:textColor="#6dd634"
                android:id="@+id/dateremain"
                />
            <ImageView
                android:id="@+id/dateimage"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_toRightOf="@+id/img"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_date_remain"/>

            <TextView
                android:id="@+id/course_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:layout_toRightOf="@+id/dateimage"
                android:layout_below="@id/dateremain"
                android:textColor="#000"
                android:text="date"/>

            <TextView
                android:id="@+id/course_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:layout_toRightOf="@+id/dateimage"
                android:layout_below="@id/course_date"
                android:textColor="#000"
                android:text="time"/>
            <RelativeLayout
                android:id="@+id/bordertime"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_toRightOf="@+id/centercourse"
                android:layout_below="@+id/course_time"
                android:layout_marginTop="8dp"
                android:background="@drawable/background_2dp_border"
                android:layout_marginLeft="7dp"
                />
            <ImageView
                android:id="@+id/dateplace"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/bordertime"
                android:layout_toRightOf="@+id/img"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/ic_place"/>

            <TextView
                android:id="@+id/course_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@+id/dateplace"
                android:layout_below="@id/bordertime"
                android:layout_marginTop="12dp"
                android:textColor="#000"
                android:text="place"/>


            <RelativeLayout
                android:id="@+id/bordertime2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_toRightOf="@+id/centercourse"
                android:layout_below="@+id/dateplace"
                android:background="@drawable/background_2dp_border"
                android:layout_marginLeft="7dp"
                />

            <ImageView
                android:id="@+id/peopleenroll"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/bordertime2"
                android:layout_toRightOf="@+id/img"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/ic_people_black"/>


            <TextView
                android:id="@+id/course_numberstudent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@+id/peopleenroll"
                android:layout_below="@id/bordertime2"
                android:layout_marginTop="12dp"
                android:textColor="#000"
                android:text="time"/>

        </RelativeLayout
            >

    </RelativeLayout>

</android.support.v7.widget.CardView>