<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="@dimen/common_10_dp"
    >

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">


        <ImageView
            android:id="@+id/course_photo"
            android:layout_width="250dp"
            android:layout_height="180dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/course_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#ffff"
            android:layout_marginTop="@dimen/common_10_dp"
            android:layout_centerHorizontal="true"
            android:shadowColor="#000000"
            android:shadowDx="-1"
            android:shadowDy="-1"
            android:shadowRadius="1"
            />

        <TextView
            android:id="@+id/teacher_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_below="@+id/course_name"
            android:textColor="#ffff"
            android:layout_marginTop="3dp"
            android:layout_centerHorizontal="true"
            android:shadowColor="#000000"
            android:shadowDx="-1"
            android:shadowDy="-1"
            android:shadowRadius="1"

            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="130dp">



        <ImageView
            android:id="@+id/moneyicon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_money"
            />
        <Button
            android:id="@+id/buttontags1_keyword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginRight="7dp"
            android:layout_below="@+id/moneyicon"
            android:text="#keyword"
            android:textSize="8dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:background="@drawable/tags_button"
            android:paddingRight="3dp"
            android:paddingLeft="3dp"
            android:paddingTop="1dp"
            android:paddingBottom="2dp"
            android:minHeight="0dp" android:minWidth="0dp"
            android:textAllCaps="false"
            android:shadowColor="#000000"
            android:shadowDx="-1"
            android:shadowDy="-1"
            android:shadowRadius="1"
            />

        <Button
            android:id="@+id/buttontags2_keyword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/buttontags1_keyword"
            android:layout_marginTop="7dp"
            android:layout_marginRight="7dp"
            android:layout_below="@+id/moneyicon"
            android:text="#keyword"
            android:textSize="8dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:background="@drawable/tags_button"
            android:paddingRight="3dp"
            android:paddingLeft="3dp"
            android:paddingTop="1dp"
            android:paddingBottom="2dp"
            android:minHeight="0dp" android:minWidth="0dp"
            android:textAllCaps="false"
            android:shadowColor="#000000"
            android:shadowDx="-1"
            android:shadowDy="-1"
            android:shadowRadius="1"
            />

        <Button
            android:id="@+id/buttontags3_keyword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/buttontags2_keyword"
            android:layout_marginTop="7dp"
            android:layout_below="@+id/moneyicon"
            android:textAllCaps="false"
            android:text="#keyword"
            android:textSize="8dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:paddingRight="3dp"
            android:paddingLeft="3dp"
            android:paddingTop="1dp"
            android:paddingBottom="2dp"
            android:minHeight="0dp" android:minWidth="0dp"
            android:background="@drawable/tags_button"
            android:shadowColor="#000000"
            android:shadowDx="-1"
            android:shadowDy="-1"
            android:shadowRadius="1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/price3"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="11dp"
            android:layout_toRightOf="@+id/moneyicon"
            android:layout_marginLeft="3dp"
            android:shadowColor="#000000"
            android:shadowDx="-1"
            android:shadowDy="-1"
            android:shadowRadius="1"

            />

        <ImageView
            android:id="@+id/peopleicon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_people"
            android:layout_toRightOf="@+id/price3"
            android:layout_marginLeft="8dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/totalofstudent3"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="11dp"
            android:layout_toRightOf="@+id/numberofstudent3"
            android:shadowColor="#000000"
            android:shadowDx="-1"
            android:shadowDy="-1"
            android:shadowRadius="1"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/numberofstudent3"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="11dp"
            android:layout_toRightOf="@+id/peopleicon"
            android:layout_marginLeft="3dp"
            android:shadowColor="#000000"
            android:shadowDx="-1"
            android:shadowDy="-1"
            android:shadowRadius="1"

            />

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>