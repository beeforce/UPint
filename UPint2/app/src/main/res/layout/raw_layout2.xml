<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    >


    <RelativeLayout
        android:id="@+id/classinfolayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="185dp"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:id="@+id/img2"
            android:src="@drawable/com_facebook_button_icon_blue"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:layout_marginLeft="13dp"
            android:id="@+id/name2"
            android:layout_marginTop="7dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_below="@+id/name2"
            android:textSize="16dp"
            android:textColor="#fff"
            android:layout_marginLeft="13dp"
            android:id="@+id/targetuniv"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_below="@+id/targetuniv"
            android:textSize="16dp"
            android:textColor="#fff"
            android:layout_marginLeft="13dp"
            android:id="@+id/targetmajor"
            android:layout_marginTop="2dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_below="@+id/targetmajor"
            android:textSize="16dp"
            android:textColor="#fff"
            android:layout_marginLeft="13dp"
            android:id="@+id/targetyear"
            android:layout_marginTop="2dp"
            />


        <ImageView
            android:id="@+id/moneyicon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_money"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="140dp"
            />
        <Button
            android:id="@+id/buttontags1_listen"
            android:layout_width="45dp"
            android:layout_height="17dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="7dp"
            android:layout_below="@+id/moneyicon"
            android:text="#keyword"
            android:textSize="7dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_marginLeft="8dp"
            android:background="@drawable/tags_button"
            />

        <Button
            android:id="@+id/buttontags2_listen"
            android:layout_width="45dp"
            android:layout_height="17dp"
            android:layout_toRightOf="@+id/buttontags1_listen"
            android:layout_marginTop="7dp"
            android:layout_marginRight="7dp"
            android:layout_below="@+id/moneyicon"
            android:text="#keyword"
            android:textSize="7dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:background="@drawable/tags_button"
            />

        <Button
            android:id="@+id/buttontags3_listen"
            android:layout_width="45dp"
            android:layout_height="17dp"
            android:layout_toRightOf="@+id/buttontags2_listen"
            android:layout_marginTop="7dp"
            android:layout_below="@+id/moneyicon"
            android:text="#keyword"
            android:textSize="7dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:background="@drawable/tags_button"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/price2"
            android:text="price"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="11dp"
            android:layout_toRightOf="@+id/moneyicon"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="140dp"

            />

        <ImageView
            android:id="@+id/peopleicon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_people"
            android:layout_toRightOf="@+id/price2"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="140dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/numberofstudent2"
            android:text="15"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="11dp"
            android:layout_toRightOf="@+id/peopleicon"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="140dp"

            />

    </RelativeLayout>

</android.support.v7.widget.CardView>