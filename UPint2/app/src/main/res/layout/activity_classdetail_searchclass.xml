<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bee.upint2.Classdetail_searchclass">

    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/classdetailrelay1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/backclassdetail"
                android:layout_width="35dp"
                android:layout_height="32dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_arrow_left" />

            <TextView
                android:id="@+id/classdetailcourse_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Course name"
                android:textColor="#98c428"
                android:textSize="22dp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/classdetailrelay2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/classdetailrelay1"
            android:layout_marginTop="4dp"
            android:background="@drawable/background_2dp_border" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/classdetailrelay2">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:id="@+id/class_picture"
                    android:layout_width="match_parent"
                    android:layout_height="225dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/com_facebook_button_icon_blue" />

                <TextView
                    android:id="@+id/course_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="130dp"
                    android:shadowColor="#000000"
                    android:shadowDx="-1"
                    android:shadowDy="-1"
                    android:shadowRadius="1"
                    android:textColor="#fff"
                    android:textSize="27dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/moneyicon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="180dp"
                    android:shadowColor="#000000"
                    android:shadowDx="-1"
                    android:shadowDy="-1"
                    android:shadowRadius="1"
                    android:src="@drawable/ic_money" />

                <TextView
                    android:id="@+id/price_searchclass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="180dp"
                    android:layout_toRightOf="@+id/moneyicon"
                    android:shadowColor="#000000"
                    android:shadowDx="-1"
                    android:shadowDy="-1"
                    android:shadowRadius="1"
                    android:textColor="#ffffff"
                    android:textSize="17dp"
                    android:textStyle="bold"

                    />

                <ImageView
                    android:id="@+id/peopleicon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="180dp"
                    android:layout_toRightOf="@+id/price_searchclass"
                    android:shadowColor="#000000"
                    android:shadowDx="-1"
                    android:shadowDy="-1"
                    android:shadowRadius="1"
                    android:src="@drawable/ic_people" />

                <TextView
                    android:id="@+id/numberofstudent_searchclass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="182dp"
                    android:layout_toRightOf="@+id/peopleicon"
                    android:shadowColor="#000000"
                    android:shadowDx="-1"
                    android:shadowDy="-1"
                    android:shadowRadius="1"
                    android:textColor="#ffffff"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/numberofstudent_searchclass2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="182dp"
                    android:layout_toRightOf="@+id/numberofstudent_searchclass"
                    android:shadowColor="#000000"
                    android:shadowDx="-1"
                    android:shadowDy="-1"
                    android:shadowRadius="1"
                    android:textColor="#ffffff"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/teacher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/class_picture"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:textColor="#000"
                    android:textSize="26dp" />

                <ImageView
                    android:id="@+id/place_searchclass_icon"
                    android:layout_width="20dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/teacher"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/ic_place" />

                <TextView
                    android:id="@+id/place_searchclass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/teacher"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="3dp"
                    android:layout_toRightOf="@+id/place_searchclass_icon"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/buttontags1_searchclass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/place_searchclass"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="7dp"
                    android:layout_marginTop="9dp"
                    android:background="@drawable/tags_button_black"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:text="#keyword"
                    android:textAllCaps="false"
                    android:textColor="#000"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/buttontags2_searchclass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/place_searchclass"
                    android:layout_marginRight="7dp"
                    android:layout_marginTop="9dp"
                    android:layout_toRightOf="@+id/buttontags1_searchclass"
                    android:background="@drawable/tags_button_black"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:text="#keyword"
                    android:textAllCaps="false"
                    android:textColor="#000"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/buttontags3_searchclass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/buttontags2_searchclass"
                    android:layout_marginTop="9dp"
                    android:layout_marginLeft="18dp"
                    android:background="@drawable/tags_button_black"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:text="#keyword"
                    android:textAllCaps="false"
                    android:textColor="#000"
                    android:textSize="12dp"
                    android:textStyle="bold" />


                <RelativeLayout
                    android:id="@+id/centerrelay"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/buttontags3_searchclass"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/background_2dp_border" />


                <TextView
                    android:id="@+id/descriptionet_searchclass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/centerrelay"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:text="Description"
                    android:textColor="#000"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/description_searchclass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/descriptionet_searchclass"
                    android:layout_marginLeft="17dp"
                    android:textColor="#000"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/targetet_searchclass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/description_searchclass"
                    android:layout_marginLeft="15dp"
                    android:text="Target"
                    android:textColor="#000"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/target_searchclass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/targetet_searchclass"
                    android:layout_marginLeft="18dp"
                    android:textColor="#000"
                    android:textSize="18dp" />

                <RelativeLayout
                    android:id="@+id/classdetailine"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/target_searchclass"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/background_2dp_border" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/classdetailine">

                    <RelativeLayout
