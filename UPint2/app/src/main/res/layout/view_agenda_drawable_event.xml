<?xml version="1.0" encoding="utf-8"?>
<com.github.tibolte.agendacalendarview.agenda.AgendaEventView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <!-- Description -->
    <RelativeLayout
        android:id="@+id/view_agenda_event_description_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView android:id="@+id/view_agenda_event_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/view_agenda_event_title"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#0a0909"
            android:textSize="18dp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:text="ddad"/>

        <RelativeLayout
            android:id="@+id/view_agenda_event_location_container"
            android:layout_below="@+id/view_agenda_event_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/view_agenda_event_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:textColor="#fff"
                android:textSize="15dp"
                android:text="location"/>

            <ImageView
                android:id="@+id/locationicon"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_marginLeft="13dp"
                android:layout_below="@+id/view_agenda_event_description"
                android:src="@drawable/ic_place_white"/>

            <TextView
                android:id="@+id/view_agenda_event_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/locationicon"
                android:layout_below="@+id/view_agenda_event_description"
                android:textColor="@color/calendar_text_default"
                android:textSize="13dp"
                android:text="description"/>


        </RelativeLayout>

    </RelativeLayout>

</com.github.tibolte.agendacalendarview.agenda.AgendaEventView>