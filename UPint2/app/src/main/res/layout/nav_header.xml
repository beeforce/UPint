<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="210dp"
    android:background="#98c428"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="16dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">


    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="85dp"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="8dp"
        android:background="@drawable/background_oval_border">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="2dp"
            android:id="@+id/cardview"
            android:layout_centerHorizontal="true"
            app:cardCornerRadius="42dp"
            >

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/com_facebook_button_icon_blue" />
        </android.support.v7.widget.CardView>

    </RelativeLayout>

    <TextView
        android:id="@+id/user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="3dp"
        android:text="Buri  Paoton"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="23dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/user_university"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chaingmai university"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="16dp" />


</LinearLayout>